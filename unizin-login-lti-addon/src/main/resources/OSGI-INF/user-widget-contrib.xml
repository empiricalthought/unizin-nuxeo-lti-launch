<component name="org.unizin.cmp.lti.userLayoutContrib">
  <require>org.nuxeo.ecm.platform.forms.layout.WebLayoutManager</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgets">
    <widget name="userAdditionalWidgets" type="complex">
      <labels>
        <label mode="any">LTI User Attributes</label>
      </labels>
      <subWidgets>
        <widget name="toolConsumerInstanceGuid" type="text">
          <labels>
            <label mode="any">Tool Consumer Instance GUID</label>
          </labels>
          <fields>
            <field schema="user">toolConsumerInstanceGuid</field>
          </fields>
        </widget>
        <widget name="ltiUserId" type="text">
          <labels>
            <label mode="any">LTI User ID</label>
          </labels>
          <fields>
            <field schema="user">ltiUserId</field>
          </fields>
        </widget>
      </subWidgets>
    </widget>
  </extension>
</component>
